<div class="container">
    <div class="row">
        <div class="col-sm-10 offset-sm-1">
            <a href="/notes" class="btn btn-primary my-2">Back</a>
        </div>
        <div class="col-sm-6 offset-sm-3">
            <div class="card">
                <div class="card-header">
                    <h4>Details of note</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="titleInput">Title</label>
                        <input type="text" class="form-control" id="titleInput"
                            placeholder="Enter a title" value="{{note.title}}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="descriptionTextArea">Description</label>
                        <textarea class="form-control" id="descriptionTextArea" 
                            placeholder="Enter a description" readonly>{{note.description}}</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>